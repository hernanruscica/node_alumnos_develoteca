<%- include('includes/cabecera', {title: "Ingresar nuevo alumno"}) %>
<body>
    <header class="cabecera">
        <nav>
          <ul class="cabecera__navbar">
            <li class="cabecera__navbar-item"><a href="/alumnos/crear" class = "cabecera-navbar-btn">Ingresar alumno</a></li>
            <li class="cabecera__navbar-item"><a href="/alumnos/" class = "cabecera-navbar-btn">Ver todos</a></li>
            <li class="cabecera__navbar-item"><a href="/alumnos/buscar" class = "cabecera-navbar-btn">Buscar alumno</a></li>
          </ul>
        </nav>
        
      </header>
    <h1 class="titulo">Ingresar nuevo alumno</h1>
    <form class="form" action="/alumnos/insertar-alumno" method="post" enctype="multipart/form-data">
        <div class="campo">
            <label for="image">Foto de perf√≠l:</label>
            <input type="file" id="image" name="image">
        </div>
        <div class="campo">
            <label for="nombres">Nombres:</label>
            <input type="text" id="nombres" name="nombres" required>
        </div>
        <div class="campo">
            <label for="apellidos">Apellidos:</label>
            <input type="text" id="apellidos" name="apellidos" required>
        </div>
        <div class="campo">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
        </div>
        <div class="campo">
            <label for="dni">DNI:</label>
            <input type="number" id="dni" name="dni" required>
        </div>
        <div class="campo">
            <label for="mail">Mail:</label>
            <input type="email" id="mail" name="mail" required>
        </div>
        <div class="campo">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>
        <input class="btn-enviar" type="submit" value="Ingresar alumno">
    </form>    
</html>